{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion":2017,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": ["import", "prettier"],
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "singleQuote": true,
                "printWidth": 120,
                "endOfLine":"auto"
            }
        ],
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "linebreak-style": [ 0, "warn"],
        "no-console": [ 0, "error" ],
        "indent": [ "error", 2, { "SwitchCase": 1 }  ],
        "semi": [ "error", "always" ],
        "quotes":["error", "single"]
    },
    "globals": {
        "Given": "writable",
        "When": "writable",
        "Then": "readonly",
        "Before": "readonly",
        "BeforeAll": "readonly",
        "BeforeStep": "readonly",
        "After": "readonly",
        "AfterAll": "readonly",
        "AfterStep": "readonly",
        "helpers":"readonly",
        "browser": "readonly",
        "env": "readonly",
        "date": "readonly",
        "dateTime": "readonly",
        "startDateTime": "readonly",
        "endDateTime": "readonly",
        "browserName": "readonly",
        "BROWSER_NAME": "writable",
        "reportName": "readonly",
        "projectName": "readonly",
        "settings": "readonly",
        "Status": "writable",
        "envConfig": "readonly",
        "assert": "readonly",
        "expect": "readonly",
        "DELAY_100ms": "readonly",
        "DELAY_200ms": "readonly",
        "DELAY_300ms": "readonly",
        "DELAY_500ms": "readonly",
        "DELAY_1s": "readonly",
        "DELAY_2s": "readonly",
        "DELAY_3s": "readonly",
        "DELAY_5s": "readonly",
        "DELAY_10s": "readonly",
        "DELAY_15s": "readonly",
        "DELAY_20s": "readonly",
        "DELAY_30s": "readonly",
        "DELAY_40s": "readonly",
        "noImplicitAny": "readonly",
        "noImplicitThis": "readonly",
        "strictNullChecks": "readonly",
        "strictFunctionTypes": "readonly",
        "noEmit": "readonly",
        "forceConsistentCasingInFileNames": "readonly",
        "getTagsFromFeatureFiles": "readonly",
        "sharedObjects": "readonly",
        "pageObjects": "writable",
        "resultingString": "readonly",
        "skipTag": "writable",
        "paths": "writable",
        "utam": "readonly",
        "s3Data": "readonly",
        "emailData": "readonly",
        "dryRun": "writable",
        "email": "readonly",
        "s3Date": "readonly",
        "useProxy": "readonly",
        "cucumberThis": "writable",
        "accessibilityLib": "readonly",
        "dataconfig": "readonly"
    }
}